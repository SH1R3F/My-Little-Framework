{% extends "layout/app.twig" %}

{% block content %}
    <div class="row justify-content-center">
        <form action="/auth/login" class="col-sm-10 col-md-8" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input class="form-control{{ errors.email ? ' is-invalid' : '' }}" id="exampleInputEmail1" name="email" placeholder="Enter email" type="text" value="{{ old.email }}">
                {% if errors.email %}
                    <small class="invalid-feedback">{{ errors.email | first }}</small>
                {% endif %}
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input class="form-control{{ errors.password ? ' is-invalid' : '' }}" id="exampleInputPassword1" name="password" placeholder="Password" type="password" value="{{ old.password }}">
                {% if errors.password %}
                    <small class="invalid-feedback">{{ errors.password | first }}</small>
                {% endif %}

            </div>
            <div class="form-check">
                <input class="form-check-input" id="exampleCheck1" name="rememberme" type="checkbox">
                <label class="form-check-label" for="exampleCheck1">Remember Me</label>
            </div>
            <button class="btn btn-primary" type="submit">Login</button>
        </form>
    </div>
{% endblock %}
