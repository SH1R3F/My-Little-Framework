{% extends "layout/app.twig" %}

{% block content %}
    <div class="row justify-content-center">
        <form action="/auth/login" method="post" class="col-sm-10 col-md-8 mt-5">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input class="form-control" id="exampleInputEmail1" placeholder="Enter email" type="text" name="email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input class="form-control" id="exampleInputPassword1" placeholder="Password" type="password" name="password">
            </div>
            <div class="form-check">
                <input class="form-check-input" id="exampleCheck1" type="checkbox" name="rememberme">
                <label class="form-check-label" for="exampleCheck1">Remember Me</label>
            </div>
            <button class="btn btn-primary" type="submit">Login</button>
        </form>
    </div>
{% endblock %}
